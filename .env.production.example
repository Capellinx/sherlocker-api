# ===========================
# PRODUCTION ENVIRONMENT
# ===========================
# Copy this file to .env and fill in your production values
# DO NOT commit .env to version control

# ===========================
# Server Configuration
# ===========================
PORT=3000

# Allowed origins for CORS (comma-separated)
# Add your Cloudflare domain here
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ===========================
# Database Configuration (PostgreSQL)
# ===========================
# These variables are used by docker-compose.yml
POSTGRES_DB=sherlocker_prod
POSTGRES_USER=sherlocker_user
POSTGRES_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
POSTGRES_PORT=5432

# Full database URL (automatically constructed in docker-compose)
# If running outside Docker, use: postgresql://sherlocker_user:YOUR_PASSWORD@localhost:5432/sherlocker_prod
DATABASE_URL=postgresql://sherlocker_user:CHANGE_THIS_TO_STRONG_PASSWORD@postgres:5432/sherlocker_prod

# ===========================
# JWT Configuration
# ===========================
# IMPORTANT: Generate a secure random string for production
# Run: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_SECURE_RANDOM_STRING

# JWT token expiration time
JWT_EXPIRES_IN=7d

# ===========================
# Email Configuration (Resend)
# ===========================
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_production_api_key_here

# ===========================
# ZyonPay / HotPayy Configuration
# ===========================
# Production credentials from https://app.hotpayy.com

# ZyonPay Public Key
ZYONPAY_PUBLIC_KEY=your-production-public-key

# ZyonPay Secret Key
ZYONPAY_SECRET_KEY=your-production-secret-key

# ZyonPay API Base URL
ZYONPAY_BASE_URL=https://app.hotpayy.com/api/v1

# ZyonPay Webhook URL
# This should be your Cloudflare domain + /payments/webhook
# Example: https://api.yourdomain.com/payments/webhook
ZYONPAY_WEBHOOK_URL=https://api.yourdomain.com/payments/webhook

# ===========================
# Node Environment
# ===========================
NODE_ENV=production
